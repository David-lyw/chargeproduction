<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head"></include>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d000000"
        android:orientation="horizontal"
        android:visibility="gone">

        <!-- 界面点击效果：每个textview单独配置-->
        <TextView
            style="@style/bottom_tabhost_style"
            android:drawableTop="@drawable/mainpage_bottom_1"
            android:text="点评" />

        <TextView
            style="@style/bottom_tabhost_style"
            android:drawableTop="@drawable/mainpage_bottom_2"
            android:text="糯米" />

        <TextView
            style="@style/bottom_tabhost_style"
            android:drawableTop="@drawable/mainpage_bottom_3"
            android:text="我的" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#B2B2B2" />

    <RadioGroup
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4d000000"
        android:checkedButton="@+id/one"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/app_one"
            style="@style/radiobutton_menuitem_style1"
            android:drawableTop="@drawable/mainpage_bottom_1"
            android:text="点评" />

        <RadioButton
            android:id="@+id/app_two"
            style="@style/radiobutton_menuitem_style1"
            android:drawableTop="@drawable/mainpage_bottom_2"
            android:text="糯米" />

        <RadioButton
            android:id="@+id/app_three"
            style="@style/radiobutton_menuitem_style1"
            android:drawableTop="@drawable/mainpage_bottom_3"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>